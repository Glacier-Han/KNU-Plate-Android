<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="크슐랭가이드"
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/title_color"

            />


        <EditText
            android:id="@+id/univcert_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_design_1"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="28dp"
            android:hint=" 메일로 발송된 인증번호를 입력하세요."
            android:fontFamily="@font/seoulnamsancb"
            android:textColorHint="#4A4A4A"
            android:textSize="15dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="크슐랭가이드는 건전한 리뷰 문화 형성과 경대생들의 솔직한 리뷰 공유를 위해 이메일 인증을 실시하고 있습니다."
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="12dp"
            android:layout_marginHorizontal="44dp"
            android:layout_marginVertical="10dp"/>



        <Button
            android:id="@+id/univcert_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="94dp"
            android:background="@drawable/title_button_design"
            android:fontFamily="@font/seoulnamsancb"
            android:paddingVertical="10dp"
            android:text="인증 메일 보내기"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/univcert_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="94dp"
            android:fontFamily="@font/seoulnamsancb"
            android:paddingVertical="10dp"
            android:text="다음"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 인증을 완료하셨다면 다음을 눌러주세요."
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginHorizontal="44dp"
            android:layout_marginTop="20dp"/>


    </LinearLayout>
</ScrollView>