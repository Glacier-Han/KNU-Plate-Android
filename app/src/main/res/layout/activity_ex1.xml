<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="크슐랭가이드"
        android:fontFamily="@font/seoulnamsancb"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/title_color"

        />
    <TextView
        android:id="@+id/title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_1"
        android:layout_margin="20dp"
        android:text="학교 주위 맛집들만 모았다!\n같은 경대생들이 쓰는 찐리뷰!"
        android:fontFamily="@font/seoulhangang"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <Button
        android:id="@+id/title_but_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/title_button_design"
        android:fontFamily="@font/seoulnamsancb"
        android:paddingVertical="10dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/title_2" />

    <Button
        android:id="@+id/title_but_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_but_login"
        android:layout_marginTop="10dp"
        android:background="@drawable/title_button2_design"
        android:text="아직 회원이 아니신가요?"
        android:fontFamily="@font/seoulnamsancb"
        android:textSize="20dp"
        android:layout_marginHorizontal="60dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"

        />



</androidx.constraintlayout.widget.ConstraintLayout>