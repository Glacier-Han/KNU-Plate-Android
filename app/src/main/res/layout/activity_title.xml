<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="크슐랭가이드"
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/title_color"

            />
        <TextView
            android:id="@+id/title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="학교 주위 맛집들만 모았다!\n같은 경대생들이 쓰는 찐리뷰!"
            android:fontFamily="@font/seoulhangang"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <Button
            android:id="@+id/title_but_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/title_button_design"
            android:fontFamily="@font/seoulnamsancb"
            android:paddingVertical="10dp"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/title_but_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="60dp"
            android:gravity="center"
            android:text="아직 회원이 아니신가요?"
            android:fontFamily="@font/seoulnamsancb"
            android:textSize="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"

            />
    </LinearLayout>
</ScrollView>